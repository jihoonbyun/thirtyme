<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_part1"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:background="#ffffff"
    android:layout_marginBottom="5dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="오늘의 노하우"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:textColor="@color/color_blue"/>
<HorizontalScrollView
    android:id="@+id/horizontal_scroll"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_rolling_1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/main_rolling_1"
            android:adjustViewBounds="true"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/roundshape_btn2"
            >
        </ImageView>

        <ImageView
            android:id="@+id/main_rolling_2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/main_rolling_2"
            android:adjustViewBounds="true"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="visible"
            android:background="@drawable/roundshape_btn2">
        </ImageView>

        <ImageView
            android:id="@+id/main_rolling_3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/main_rolling_3"
            android:adjustViewBounds="true"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="visible"
            android:background="@drawable/roundshape_btn2">
        </ImageView>

    </LinearLayout>

</HorizontalScrollView>

</LinearLayout>