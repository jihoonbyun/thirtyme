<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_part1"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">
<HorizontalScrollView
    android:id="@+id/horizontal_scroll"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_rolling_1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/main_rolling_1"
            android:adjustViewBounds="true"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            >
        </ImageView>

        <ImageView
            android:id="@+id/main_rolling_2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/main_rolling_2"
            android:adjustViewBounds="true"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:visibility="visible">
        </ImageView>

        <ImageView
            android:id="@+id/main_rolling_3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/main_rolling_3"
            android:adjustViewBounds="true"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:visibility="visible">
        </ImageView>

    </LinearLayout>

</HorizontalScrollView>

</LinearLayout>