<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_signup_email"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/email_signup_password"
        android:layout_below="@+id/email_signup_email"
        android:layout_alignLeft="@+id/email_signup_email"
        android:layout_alignStart="@+id/email_signup_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/email_signup_passwordcheck"
        android:layout_below="@+id/email_signup_password"
        android:layout_alignLeft="@+id/email_signup_password"
        android:layout_alignStart="@+id/email_signup_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/email_signup_nickname"
        android:layout_below="@+id/email_signup_passwordcheck"
        android:layout_alignLeft="@+id/email_signup_passwordcheck"
        android:layout_alignStart="@+id/email_signup_passwordcheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="이메일로 초간단 가입"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초간단 가입완료"
        android:id="@+id/email_signup_complete"
        android:layout_below="@+id/email_signup_nickname"
        android:layout_alignLeft="@+id/email_signup_nickname"
        android:layout_alignStart="@+id/email_signup_nickname"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/email_signup_nickname"
        android:layout_alignEnd="@+id/email_signup_nickname"
        android:background="#9de1f9"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용약관"
        android:id="@+id/yakwan"
        android:background="#ffffff"
        android:layout_alignTop="@+id/privacy"
        android:layout_alignLeft="@+id/email_signup_complete"
        android:layout_alignStart="@+id/email_signup_complete" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 취급방침"
        android:id="@+id/privacy"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:layout_below="@+id/email_signup_complete"
        android:layout_alignRight="@+id/email_signup_complete"
        android:layout_alignEnd="@+id/email_signup_complete" />
</RelativeLayout>