<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src='@drawable/product_detail'
        android:id="@+id/image_detail" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/image_detail"
        android:id="@+id/list_detail1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="like"
            android:layout_weight="0.50" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="share"/>
    </LinearLayout>


    <LinearLayout
        android:id='@+id/list_detail2'
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/list_detail1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="name"
            android:layout_weight="0.50" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="price"/>
    </LinearLayout>


    <TextView
        android:id='@+id/list_detail3'
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_detail2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="soje"/>

    <TextView
        android:id='@+id/list_detail4'
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_detail3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="size"/>


    <TextView
        android:id='@+id/list_detail5'
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_detail4"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="explanation"/>

    <fragment android:name="com.example.jb.thirtyme.FooterMenuFragment"
        android:id="@+id/footer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:layout="@layout/fragment_productdetailbottombar" />





</RelativeLayout>